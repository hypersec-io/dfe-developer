# Test Infrastructure Configuration
# Copy this to .env and fill in your values
# .env is gitignored - never commit credentials!

# =============================================================================
# SCALEWAY (for macOS testing)
# =============================================================================
# Get from: https://console.scaleway.com/project/credentials
SCALEWAY_ACCESS_KEY_ID=SCWXXXXXXXXXXXXXXXXX
SCALEWAY_ACCESS_KEY_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SCALEWAY_ORGANIZATION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SCALEWAY_PROJECT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
SCALEWAY_REGION=fr-par
SCALEWAY_ZONE=fr-par-3
SCALEWAY_MAC_TYPE=M1-M
# Project-specific naming convention
SCALEWAY_MAC_NAME=hypersec-dfe-developer-test-mac

# Tags for resource management and project identification
SCALEWAY_TAGS=dfe-developer,ephemeral,auto-delete
# hypersec-agent-test-mac will use this tag 
SCALEWAY_AGENT_TAG=hypersec-agent

# =============================================================================
# PROXMOX (for Fedora/Ubuntu testing)
# =============================================================================
# Your Proxmox server connection details
PROXMOX_HOST=proxmox.example.com
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=  # Optional - leave empty if using SSH keys
PROXMOX_NODE=pve
PROXMOX_API_VERIFY_SSL=false

# Fedora Test VM
PROXMOX_FEDORA_VMID=2005
PROXMOX_FEDORA_SNAPSHOT=initial_build
PROXMOX_FEDORA_HOSTNAME=dfe-dev.example.com
PROXMOX_FEDORA_USER=dfe
PROXMOX_FEDORA_PASSWORD=dfe  # Optional - omit from inventory if using SSH keys
PROXMOX_FEDORA_SSH_PORT=22

# Ubuntu Test VM
PROXMOX_UBUNTU_VMID=2006
PROXMOX_UBUNTU_SNAPSHOT=initial_build
PROXMOX_UBUNTU_HOSTNAME=dfe-dev-u.example.com
PROXMOX_UBUNTU_USER=dfe
PROXMOX_UBUNTU_PASSWORD=dfe  # Optional - omit from inventory if using SSH keys
PROXMOX_UBUNTU_SSH_PORT=22

# =============================================================================
# TEST SETTINGS
# =============================================================================
# Deploy Scaleway serverless function for auto-cleanup (one-time setup)
DEPLOY_SCALEWAY_IDLE_FUNCTION=false  # Set to true to deploy serverless auto-delete

# Auto-delete Mac mini after X hours of IDLE (not just uptime)
SCALEWAY_AUTO_DELETE_HOURS=24

# Ansible connection settings
ANSIBLE_SSH_RETRIES=3
ANSIBLE_TIMEOUT=30
